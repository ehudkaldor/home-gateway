:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
COMMIT

*nat
:PREROUTING ACCEPT [0:0]
:INPUT ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]

# p4p1 is WAN interface, #p1p1 is LAN interface
-A POSTROUTING -o {{ or ( getenv "wan" ) "eth0" }} -j MASQUERADE

COMMIT

*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]

# Service rules

# basic global accept rules - ICMP, loopback, traceroute, established all accepted
-A INPUT -i lo -j ACCEPT
#-A INPUT -s 127.0.0.0/8 -d 127.0.0.0/8 -i lo -j ACCEPT
-A INPUT -p icmp -m icmp --icmp-type 8 -j ACCEPT
-A INPUT -p icmp -m icmp --icmp-type 11 -j ACCEPT
-A INPUT -p icmp -m icmp --icmp-type 3 -j ACCEPT
#-A INPUT -p icmp -j ACCEPT

-A INPUT -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT

# enable traceroute rejections to get sent out
-A INPUT -p udp -m udp --dport 33434:33523 -j REJECT --reject-with icmp-port-unreachable

# DNS - accept from LAN
-A INPUT -i {{ or ( getenv "lan" ) "eth1" }} -p tcp --dport 53 -j ACCEPT
-A INPUT -i {{ or ( getenv "lan" ) "eth1" }} -p udp --dport 53 -j ACCEPT

# SSH - accept from LAN
-A INPUT -i {{ or ( getenv "lan" ) "eth1" }} -p tcp --dport 22 -j ACCEPT

# DHCP client requests - accept from LAN
-A INPUT -i {{ or ( getenv "lan" ) "eth1" }} -p udp --dport 67:68 -j ACCEPT

# drop all other inbound traffic
-A INPUT -j DROP

# Forwarding rules

# forward packets along established/related connections
-A FORWARD -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
#-A FORWARD -i {{ or ( getenv "lan" ) "eth1" }} -o {{ or ( getenv "wan" ) "eth0" }} -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT

# forward from LAN (p1p1) to WAN (p4p1)
-A FORWARD -i {{ or ( getenv "lan" ) "eth1" }} -o {{ or ( getenv "wan" ) "eth0" }} -j ACCEPT

# drop all other forwarded traffic
-A FORWARD -j DROP

COMMIT
